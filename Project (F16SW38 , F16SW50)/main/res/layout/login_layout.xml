<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:background="@drawable/styles"
    android:paddingBottom="20dp"

    >

    <EditText
        android:background="@drawable/login_page"
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Type your email "
        android:inputType="textEmailAddress"
        android:textStyle="bold"
        android:gravity="center"

        android:layout_marginTop="150dp"
        />
    <EditText
        android:gravity="center"
        android:background="@drawable/login_page"
        android:id="@+id/pas"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Type your password "

        android:layout_marginTop="40dp"
        android:textStyle="bold"

        android:inputType="textPassword"
        android:layout_below="@+id/email"
        />
    <Button
        android:background="@drawable/login_page"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/sign"
        android:layout_below="@+id/pas"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textStyle="italic"
        android:text="sign in"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/sign"
        android:textSize="15dp"
        android:textStyle="bold"
        android:id="@+id/I_need"
        android:text="I Need Registration"/>
    <TextView
        android:id="@+id/go_to_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/I_need"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text=" Register me"/>



</RelativeLayout>